{
    "manifest_version": 2,
    "name": "YouTube Video Downloader",
    "description": "Add a context menu and button to download a YouTube video to a local media server",
    "version": "1.0",
    "homepage_url": "https://github.com/mdn/webextensions-examples/",

    "background": {
        "scripts": [
            "background.js"
        ]
    },
	
	"browser_action": {
		"default_icon": {
			"16": "icons/page-16.png",
			"32": "icons/page-32.png"
		}
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "addon@example.com",
			"strict_min_version": "42.0"
		}
	},
	
    "permissions": [
        "activeTab",
        "contextMenus",
		"tabs"
    ]
	
}
