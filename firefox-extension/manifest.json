{
    "manifest_version": 2,
    "name": "YouTube-Downloader",
    "description": "Add a context menu and button to download a YouTube video to a local media server",
    "version": "1.2",
    "homepage_url": "https://github.com/ninevoltz/video_downloader",
	"icons": {
		"32": "icons/page-32.png"
	},

    "background": {
        "scripts": [
            "background.js"
        ]
    },
	
	"browser_action": {
		"default_icon": {
			"16": "icons/page-16.png",
			"32": "icons/page-32.png"
		}
	},

    "permissions": [
        "activeTab",
        "contextMenus",
		"tabs"
    ]
	
}
